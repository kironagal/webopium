<%- include('partials/header'); %>
<div>
    <h1>Home</h1>
    <p><%= homeContent %></p>
    <% posts.forEach(function(post){ %>
        <h1><%=post.pTitle%></h1>
        <p>
            <%=post.pBody.substring(0, 100) + " ..."%>
            <a href="/posts/<%=post.pTitle %>">Read More</a>
        </p>
    <% }) %>
</div>

<%- include('partials/footer'); %>

